rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Teams collection - controlled write access
    match /teams/{teamId} {
      // Anyone can read the leaderboard
      allow read: if true;
      
      // Coordinators can update their team when match is unlocked
      // Admins can always update for any reason (overrides/resets/name changes)
      allow write: if request.auth != null && (
        // Admin can always write (bulk import / overrides / resets)
        request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33'
        // OR coordinator can write their team when unlocked
        || (request.resource.data.coordinatorUID == request.auth.uid
            && (!exists(/databases/$(database)/documents/admin/matchLock) 
                || !get(/databases/$(database)/documents/admin/matchLock).data.locked))
      );
    }
    
    // Admin collection (optional - for match lock, etc.)
    match /admin/{document=**} {
      allow read: if true;
      // Only specific admin UIDs can write (replace with actual admin UID)
      allow write: if request.auth != null 
        && request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33';
    }
  }
}
