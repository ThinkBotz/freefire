rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Teams collection - controlled write access
    match /teams/{teamId} {
      // Anyone can read the leaderboard
      allow read: if true;
      
      // Coordinators can update their team when match is unlocked
      // Admins can always update for any reason (overrides/resets/name changes)
      allow write: if request.auth != null && (
        // Admin can always write (bulk import / overrides / resets)
        request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33'
        // OR coordinator can write their team when unlocked
        || (request.resource.data.coordinatorUID == request.auth.uid
            && (!exists(/databases/$(database)/documents/admin/matchLock) 
                || !get(/databases/$(database)/documents/admin/matchLock).data.locked))
      );
      
      // Screenshots subcollection - coordinators can upload to their team
      match /screenshots/{screenshotId} {
        allow read: if true;
        allow create: if request.auth != null && (
          // Admin can always upload
          request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33'
          // OR coordinator can upload to their team
          || get(/databases/$(database)/documents/teams/$(teamId)).data.coordinatorUID == request.auth.uid
        );
        allow update, delete: if request.auth != null && (
          request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33'
          || get(/databases/$(database)/documents/teams/$(teamId)).data.coordinatorUID == request.auth.uid
        );
      }
    }
    
    // Admin collection (match lock, settings, match reports)
    match /admin/{document=**} {
      allow read: if true;
      // Only admin UID can write
      allow write: if request.auth != null 
        && request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33';
    }
    
    // Round backups collection - admin only
    match /roundBackups/{backupId} {
      allow read: if request.auth != null 
        && request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33';
      allow write: if request.auth != null 
        && request.auth.uid == '2v67e9XQFpYqxzNf0D8g86iDxs33';
    }
  }
}
